// Миксин для построения блоков контента
// с возможностью его использования без входных данных

mixin block-content-2(myImg='1', t1='Нет заголовка', t2='Нет описания')  
  hr
  .block-title
    if(myImg == '1') 
      img(alt='Нет картинки')
    else 
      img(src = myImg)
    p=t1
    .main-title
      p=t2

mixin footer-long-page 
  .page-footer
    .fixed-bottom 
      p made by 
        a(href = 'https://vk.com/antoshakr') Anton Krikunov

mixin footer-short-page 
  .page-footer.fixed-bottom
      p made by 
        a(href = 'https://vk.com/antoshakr') Anton Krikunov

